import("//build/package.gni")

group("ui") {
  public_deps = [
    "hello_scene_manager",
    "jank",
    "noodles",
    "paint",
    "shadertoy/client",
    "shadertoy/service",
    "shapes",
    "sketchy",
    "spinning_square",
    "tile",
  ]
}

package("hello_scene_manager") {
  system_image = true

  deps = [
    "hello_scene_manager",
  ]

  binaries = [ {
        name = "hello_scene_manager"
      } ]
}

package("jank_view") {
  deps = [
    "jank",
  ]

  binary = "jank_view"
}

package("noodles_view") {
  deps = [
    "noodles",
  ]

  binary = "noodles_view"
}

package("paint_view") {
  deps = [
    "//garnet/examples/ui/paint",
  ]

  binary = "paint_view"
}

package("shadertoy_client") {
  deps = [
    "shadertoy/client",
  ]

  binary = "shadertoy_client"
}

package("shadertoy_service") {
  deps = [
    "shadertoy/service",
  ]

  binary = "shadertoy_service"

  meta = [ {
        path = rebase_path("shadertoy/service/meta/sandbox")
        dest = "sandbox"
      } ]
}

package("shapes_view") {
  deps = [
    "shapes",
  ]

  binary = "shapes_view"
}

package("sketchy_client") {
  system_image = true

  deps = [
    "sketchy",
  ]

  binaries = [
    {
      name = "sketchy_client"
    },
  ]
}

package("spinning_square_view") {
  deps = [
    "spinning_square",
  ]

  binary = "spinning_square_view"
}

package("tile_view") {
  deps = [
    "tile",
  ]

  binary = "tile_view"
}
