import("//packages/package.gni")

executable("ihda_bin") {
  output_name = "ihda"
  sources = [
    "ihda.cpp",
    "intel_hda_codec.cpp",
    "intel_hda_controller.cpp",
    "intel_hda_device.cpp",
    "print_codec_state.cpp",
    "zircon_device.cpp",
  ]

  deps = [
    "//garnet/drivers/audio/intel-hda/utils:ihda-utils",
    "//zircon/system/ulib/fbl",
    "//zircon/system/ulib/zx",
  ]

  cflags = [ "-Wno-address-of-packed-member" ]
}

package("ihda") {
  deps = [
    ":ihda_bin",
  ]
  binaries = [ {
        name = "ihda"
      } ]
}
