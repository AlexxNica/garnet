import("//build/config/fuchsia/rules.gni")

driver_module("usb-audio") {
  output_name = "libusb-audio"

  public = []

  sources = [
    "audio-util.c",
    "midi.c",
    "usb-audio-stream.cpp",
    "usb-audio.c",
    "usb-midi-sink.c",
    "usb-midi-source.c",
  ]

  deps = [
    "//drivers/audio/audio-proto",
    "//drivers/audio/dispatcher-pool:audio-dispatcher-pool",
    "//magenta/system/ulib/audio-proto-utils",
    "//magenta/system/ulib/ddktl",
    "//magenta/system/ulib/mx",
    "//magenta/system/ulib/mxtl",
  ]

  libs = [
    "ddk",
    "driver",
    "magenta",
    "sync",
  ]
}
