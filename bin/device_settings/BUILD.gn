import("//build/rust/rust_binary.gni")
import("//build/package.gni")

rust_binary("bin") {
  with_tests = true

  name = "device_settings_manager"

  deps = [
    "//garnet/public/lib/device_settings/fidl:fidl_rust_library",
    "//garnet/public/lib/fidl/rust/fidl",
    "//garnet/public/rust/crates/fdio",
    "//garnet/public/rust/crates/fuchsia-app",
    "//garnet/public/rust/crates/fuchsia-zircon",
    "//garnet/public/rust/crates/fuchsia-zircon/fuchsia-zircon-sys",
    "//garnet/public/rust/crates/mxruntime",
    "//garnet/public/rust/crates/mxruntime/mxruntime-sys",
    "//garnet/public/rust/crates/tokio-fuchsia",
    "//third_party/rust-crates:futures-0.1.16",
    "//third_party/rust-crates:tempdir-0.3.5",
    "//third_party/rust-mirrors/mio",
    "//third_party/rust-mirrors/tokio-core",
  ]
}

package("device_settings_manager") {
  deps = [
    ":bin",
  ]

  binary = "device_settings_manager"

  meta = [{
    path = rebase_path("meta/sandbox")
    dest = "sandbox"
  }]
}

package ("device_settings_manager_tests") {
  system_image = true
  testonly = true

  deps = [
    ":bin"
  ]

  tests = [ {
      name = "device_settings_manager-bin-test"
  } ]
}
