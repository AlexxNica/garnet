import("//packages/package.gni")

executable("bin") {
  output_name = "listen"

  sources = [
    "listen.cc",
  ]

  deps = [
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//zircon/system/ulib/zx",
  ]

  libs = [ "launchpad" ]
}

package("listen") {
  system_image = true

  deps = [
    ":bin",
  ]

  binaries = [ {
        name = "listen"
      } ]
}
