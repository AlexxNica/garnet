import("//build/package.gni")

executable("bin") {
  output_name = "zircon_benchmarks"

  testonly = true
  sources = [
    "channels.cc",
    "events.cc",
    "fifos.cc",
    "filesystem.cc",
    "main.cc",
    "ports.cc",
    "round_trips.cc",
    "sockets.cc",
    "syscalls.cc",
    "threads.cc",
    "time_get.cc",
    "vmo.cc",
  ]
  deps = [
    "//garnet/public/lib/fxl",
    "//third_party/benchmark",
    "//third_party/gflags",
  ]
  libs = [
    "launchpad",
    "zircon",
  ]
}

package("zircon_benchmarks") {
  testonly = true
  system_image = true

  deps = [
    ":bin",
  ]

  binaries = [ {
        name = "zircon_benchmarks"
      } ]
}
