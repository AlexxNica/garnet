import("//build/package.gni")

executable("bin") {
  output_name = "guest"

  sources = [
    "guest.cc",
    "linux.cc",
    "zircon.cc",
  ]

  deps = [
    "//garnet/lib/machina",
    "//zircon/system/ulib/fbl",
  ]

  libs = [
    "hypervisor",
  ]
}

package("guest") {
  system_image = true

  deps = [
    ":bin",
  ]

  binaries = [{
    name = "guest"
  }]
}
