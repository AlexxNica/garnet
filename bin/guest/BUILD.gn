import("//build/package.gni")

executable("bin") {
  output_name = "guest"

  sources = [
    "efi.cc",
    "guest.cc",
    "linux.cc",
    "zircon.cc",
  ]

  deps = [
    "//garnet/lib/machina",
    "//zircon/system/ulib/fbl",
  ]

  libs = [
    "hypervisor",
  ]
}

package("guest") {
  system_image = true

  deps = [
    ":bin",
  ]

  binaries = [{
    name = "guest"
  }]

  if (current_cpu == "x64") {
    resources = [
      {
        path = rebase_path("//garnet/lib/machina/arch/x86/acpi/dsdt.aml")
        dest = "dsdt.aml"
      }, {
        path = rebase_path("//garnet/lib/machina/arch/x86/acpi/madt.aml")
        dest = "madt.aml"
      }, {
        path = rebase_path("//garnet/lib/machina/arch/x86/acpi/mcfg.aml")
        dest = "mcfg.aml"
      }
    ]
  }
}
